<Page x:Class="Muhametshin_Глазки_save.AgentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Muhametshin_Глазки_save"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AgentPage" FontFamily="Century Gothic">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FFE9F9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="10,5,0,5" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBox Text="Введите для поиска" VerticalContentAlignment="Center" Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged" Height="25" Width="250" FontSize="15"
                         GotFocus="TBoxSearch_GotFocus" LostFocus="TBoxSearch_LostFocus" Foreground="Gray"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10,5,0,5" Orientation="Horizontal" VerticalAlignment="Center">
                <ComboBox Name="ComboSort" SelectionChanged="ComboSort_SelectionChanged" Height="25" FontSize="15" Width="250"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="10,5,0,5" Orientation="Horizontal" VerticalAlignment="Center">
                <ComboBox Name="ComboType" SelectionChanged="ComboType_SelectionChanged" Height="25" FontSize="15" Width="150"></ComboBox>
            </StackPanel>
        </Grid>
        <ListView Name="AgentListView" Grid.Row="1">

        </ListView>
    </Grid>
</Page>
